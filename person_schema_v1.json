{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://e-rihs.io/schema/person-v1.0.schema.json",
    "title": "Person",
    "type": "object",
    "required": [
        "first_name",
        "last_name",
        "mbox"
    ],
    "properties": {
        "title": {
            "title": "Title",
            "description": "Personal title",
            "enum": [
                "dame",
                "dr",
                "master",
                "messrs",
                "miss",
                "mr",
                "mrs",
                "ms",
                "mx",
                "professor",
                "sir"
            ]
        },
        "first_name": {
            "title": "First name",
            "description": "First name",
            "type": "string",
            "minLength": 3,
            "maxLength": 128
        },
        "last_name": {
            "title": "Last name",
            "description": "Last name",
            "type": "string",
            "minLength": 3,
            "maxLength": 128
        },
        "external_pids": {
            "title": "External PIDs",
            "description": "External PIDs",
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "pid_type",
                    "pid"
                ],
                "properties": {
                    "pid_type": {
                        "enum": [
                            "ark",
                            "arxiv",
                            "bibcode",
                            "crossref funder id",
                            "doi",
                            "ean13",
                            "eissn",
                            "grid",
                            "handle",
                            "igsn",
                            "isbn",
                            "isni",
                            "issn",
                            "istc",
                            "lissn",
                            "lsid",
                            "orcid",
                            "other pid",
                            "pmid",
                            "purl",
                            "raid",
                            "ror",
                            "rrid",
                            "upc",
                            "urn/url",
                            "uuid/guid",
                            "viaf",
                            "w3id",
                            "wikidata"
                        ]
                    },
                    "pid": {
                        "title": "PID",
                        "description": "PID",
                        "type": "string",
                        "format": "uri"
                    }
                }
            }
        },
